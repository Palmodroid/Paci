<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/spacing"
        android:showDividers="middle"
        android:divider="@drawable/divider"
        android:orientation="vertical">

        <!--ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/start_button"
            android:contentDescription="@string/image"/-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/permission_welcome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_main_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/storage_permission_info"/>

        <TextView
            android:id="@+id/storage_permission_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing"
            android:background="@drawable/background_enabled"
            android:textColor="@color/text"
            android:text="@string/storage_permission_ok"
            android:textStyle="normal|italic"/>

        <!--    This Button style was nicer (called from Activity
                PreferenceDialog do not use the same style           -->

        <Button
            android:id="@+id/storage_permission_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/storage_permission_button"/>

        <Button
            android:id="@+id/storage_permission_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/storage_permission_settings_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_help_info"

            android:visibility="gone" />

        <Button
            android:id="@+id/permission_help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_help_button"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceSmall"

            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/permission_goodbye"/>

    </LinearLayout>

</ScrollView>
