<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".librarydb.MedicationsControllActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" >

	<TextView
		android:id="@+id/title_pill"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/title_pill"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<digitalgarden.librarydb.formtypes.ForeignTextField
		android:id="@+id/edittext_pill"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:text="@string/hint_pill"

		android:textAppearance="?android:attr/textAppearanceMedium"
		android:background="@drawable/border"
		android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/title_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_patient"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_margin="5dp" >

        <digitalgarden.librarydb.formtypes.ForeignTextField
            android:id="@+id/edittext_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_patient"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <digitalgarden.librarydb.formtypes.ForeignTextField
            android:id="@+id/edittext_patient_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - dob - "
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

	<TextView
        android:id="@+id/title_medication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_medication_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.librarydb.formtypes.EditTextField
        android:id="@+id/edittext_medication_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medication_name" />

</LinearLayout>		   
